#include <iostream>
using namespace std; 

// Defining a structure 
struct Person {
    string name;
    int age;
}; // be careful of this semicolon (;)

// Defining a union 
union Data {
    int intVar;
    float floatVar;
    char charVar;
    string stringVar;
};

// main function is the entry point to any program 
int main()
{
    // Creating and initializing 2 structures  
    Person person1;
    person1.name = "Hedieh"; 
    person1.age = 28;
    
    Person person2;
    person2.name = "Alireza";
    person2.age = 35;
    
    // printing structure elements 
    cout << "Person 1 details: " << endl;
    cout << "Name: " << person1.name << endl;
    cout << "Age: " << person1.age << endl;
    cout << "person 2 detials: " << endl;
    cout << "Name: " << person2.name << endl;
    cout << "Age: " << person2.age << endl;
    

    return 0;
}
