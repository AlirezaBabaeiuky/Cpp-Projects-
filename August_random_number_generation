#include <iostream>
#include <cstdlib>
#include <ctime>

using namespace std;

int main()
{
    srand(time(0));
    int b[100];
    for (int i = 0; i < 100; i++) {
        b[i] = (rand() % (50 - (-50) + 1)) + (-50);
        cout << b[i] << ' ';
    }
    
    cout << endl << "New iterative-for loop" << endl;
    
    for (int i = 0; i < 100; i++) {
        if (b[i] > 0) {
            cout << "1 ";
        }
        else if (b[i] == 0) {
            cout << "ZERO 0 ";
        }
        // Negative numbers are handled by doing nothing here
        // The loop will simply continue to the next iteration
    }
    
    cout << endl << "element 44th in the array b is: " << b[44] << endl;
    cout << "Counting numbr of positive elements in array b: ";
    int count = 0;
    for (int i=0; i<100; i++) { 
        if (b[i]>0) { 
            count++;
        }
    }
    cout << count << endl; 

    return 0;
}
