#include <cstdlib> // For rand() and srand()
#include <ctime>   // For time()
#include <iostream>

using namespace std; 

int main()
{
    int a1 = rand();
    cout << a1 << endl; 
    int a2[100]; 
    for (int i=0; i< 100; i++) { 
        a2[i] = rand() % (1000);
        cout << a2[i] << " "; 
    }

    return 0;
}
// (rand() % (5 - (-10) + 1)) + (-10): // this is the correct syntax 
