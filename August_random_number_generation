#include <cstdlib> // For rand() and srand()
#include <ctime>   // For time()
#include <iostream>

using namespace std; 

int main()
{
    // 1. Seed the random number generator once
    srand(time(0));
    
    // 2. Declare the fixed-size array outside the loop
    int b[100]; 

    for (int i=0; i<100; i++) { 
        // 3. Assign the random value to the current element of the array
        b[i] = (rand() % (20 - (-10) + 1)) + (-10);
        cout << b[i] << " ";
    }
    
    cout << endl << "New numbers with for loop and if" << endl; 
    for (int i=0; i<100; i++) { 
        if (b[i] >= -2 && b[i] <= 2) { 
            cout << b[i] << " "; 
        }
    }
    

    return 0;
}
