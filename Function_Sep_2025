#include <iostream>
using namespace std; 

void hellofcn() { 
    cout << "Hello!!!";
}

int addfcn(int a, int b) {
    return a+b;
}

void addfcn2(int a, int b) { 
    int c = a + b;
    printf("%d + %d = %d", a, b, c);
}

int main()
{
    hellofcn();
    int A = addfcn(3, 5);
    printf("\n%d ", A);
    printf("\n"); 
    addfcn2(2, 6); 
    

    return 0;
}
