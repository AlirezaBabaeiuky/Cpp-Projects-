#include <iostream>

using namespace std; 

int main()
{
    // Dynamically allocating memoery block in heap memory to store variable - here variable is pointer type (*) 
    int* nptr = new int(10);
    // declar a pointer to store the address of the allocated memory 
    cout << nptr << endl;
    cout << *nptr << endl;
    
    delete nptr; 
    return 0;
}
